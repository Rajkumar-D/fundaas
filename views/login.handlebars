  <script src="js/html5shim.js"></script>
  <![endif]-->

  <!-- Favicon -->
</head>

<body class="login">

<!-- Form area -->
<div class="admin-form">
  <div class="container">

    <div class="row">
      <div class="col-md-12">
        <!-- Widget starts -->
            <div class="logo"><a href="index-2.html" class="navbar-brand"><span class="bold">Fundaas</span></a></div>
            <div class="widget">
              <!-- Widget head -->
              <div class="widget-head">
                  Sign In to your Account
				  <div id="my-errorDiv">{{login message}}</div>
              </div>

              <div class="widget-content">
                <div class="padd">
                  <!-- Login form -->
                  <form method="POST" action="authenticate" class="form-horizontal">
                    <!-- Email -->
                    <div class="form-group">
                        <i class="icon-user"></i>
                        <input type="text" class="form-control" id="inputEmail" name="inputEmail" placeholder="Login">
                    </div>
                    <!-- Password -->
                    <div class="form-group">
                        <i class="icon-lock"></i>
                        <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="Password">
                    </div>
                    <!-- Remember me checkbox and sign in button -->
                      <div class="form-actions">
                          <label class="checkbox pull-left">
                                <span>
                                 <input class="uniform" type="checkbox" name="remember">
                                </span>
                              Remember me
                          </label>
                          <button class="submit btn btn-primary pull-right" type="submit">
                              Sign In
                              <i class="icon-angle-right"></i>
                          </button>
                          
                      </div>
                    <br />
                  </form>
				  
				</div>
              </div>
              
                <div class="widget-foot">
                  Not Registred? <a href="register.html">Register here</a>
                  Guest? <a href="guest">Click here</a>
                </div>
            </div>
         
      </div>
    </div>
  </div> 
</div>
		

<!-- JS -->
<script src="js/jquery.js"></script>
<script src="js/bootstrap.js"></script>
</body>
</html>